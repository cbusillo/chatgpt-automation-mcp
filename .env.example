# ChatGPT Automation Configuration Example
# Copy this to .env and fill in your values

# ChatGPT Credentials (if needed for login)
CHATGPT_EMAIL=your_email@example.com
CHATGPT_PASSWORD=your_password

# Browser Configuration
HEADLESS=false  # Set to true for headless mode
BROWSER_TIMEOUT=30000  # milliseconds
DEFAULT_WAIT_TIMEOUT=5000  # milliseconds

# Paths
SCREENSHOT_DIR=temp/screenshots
EXPORT_DIR=temp/exports
SESSION_DIR=temp/sessions

# Debug Settings
DEBUG_MODE=false
SAVE_SCREENSHOTS_ON_ERROR=true
LOG_LEVEL=info  # debug, info, warning, error

# Rate Limiting
REQUEST_DELAY=1000  # milliseconds between requests
MAX_RETRIES=3

# Session Management
PERSIST_SESSION=true
SESSION_NAME=default

# CDP Connection (to bypass Cloudflare)
USE_CDP=true  # Connect to existing Chrome instead of launching new
CDP_URL=http://127.0.0.1:9222  # Chrome DevTools Protocol endpoint